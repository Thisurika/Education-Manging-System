<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    
    <display-name>Student Teacher Management System</display-name>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Admin Login Servlet -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.edumanage.servlet.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/admin-login</url-pattern>
    </servlet-mapping>
    
    <!-- Teacher Login Servlet -->
    <servlet>
        <servlet-name>TeacherLoginServlet</servlet-name>
        <servlet-class>com.edumanage.servlet.TeacherLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherLoginServlet</servlet-name>
        <url-pattern>/teacher-login</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Dashboard Servlet -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.edumanage.servlet.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin-dashboard</url-pattern>
    </servlet-mapping>
    
    <!-- Teacher Dashboard Servlet -->
    <servlet>
        <servlet-name>TeacherDashboardServlet</servlet-name>
        <servlet-class>com.edumanage.servlet.TeacherDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherDashboardServlet</servlet-name>
        <url-pattern>/teacher-dashboard</url-pattern>
    </servlet-mapping>
    
    <!-- Grade Management Servlet -->
    <servlet>
        <servlet-name>GradeServlet</servlet-name>
        <servlet-class>com.edumanage.servlet.GradeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GradeServlet</servlet-name>
        <url-pattern>/grades</url-pattern>
    </servlet-mapping>
    
    <!-- Student Login Servlet -->
    <servlet>
        <servlet-name>StudentLoginServlet</servlet-name>
        <servlet-class>com.edumanage.servlet.StudentLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentLoginServlet</servlet-name>
        <url-pattern>/student-login</url-pattern>
    </servlet-mapping>
    
    <!-- Student Dashboard Servlet -->
    <servlet>
        <servlet-name>StudentDashboardServlet</servlet-name>
        <servlet-class>com.edumanage.servlet.StudentDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentDashboardServlet</servlet-name>
        <url-pattern>/student-dashboard</url-pattern>
    </servlet-mapping>
</web-app>